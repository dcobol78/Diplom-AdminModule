@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Name" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Surname" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Surname" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Patronymic" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Patronymic" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="DOB" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="DOB" class="form-label"></label>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <img src="@Model.AvatarUrl" alt="Profile Image" class="img-thumbnail mb-3" style="max-width: 200px;" />
                <input asp-for="Input.ProfileImage" class="form-control" type="file" />
                <label asp-for="Input.ProfileImage" class="form-label">Upload Profile Image</label>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
