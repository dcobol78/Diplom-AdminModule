@model Student

@{
    ViewData["Title"] = "Student Details";
}

<h2>Данные студента</h2>

<div class="student-details">
    <h3>@Model.Name @Model.Surname @Model.Patronymic</h3>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Date of Birth:</strong> @Model.DOB?.ToString("dd/MM/yyyy")</p>

    <h4>Оценки за домашние задания</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Оценка</th>
                <th>Максимальный бал</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var grade in Model.HomeworkGrades)
            {
                <tr>
                    <td>@grade.Homework.Name</td>
                    <td>@grade.Grade</td>
                    <td>@grade.MaxGrade</td>
                    <td>
                        <a asp-action="EditHomeworkGrade" asp-route-id="@grade.Id" class="btn btn-warning">Проверить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h4>Оценки за тесты</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Оценка</th>
                <th>Максимальный бал</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var grade in Model.TestGrades)
            {
                <tr>
                    <td>@grade.Test.Name</td>
                    <td>@grade.Grade</td>
                    <td>@grade.MaxGrade</td>
                    <td>
                        <a asp-action="EditTestGrade" asp-route-id="@grade.Id" class="btn btn-warning">Проверить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>