@model List<Question>
<div class="form-block">
    <div class="form-block">
        <h2>Список вопросов</h2>
        <div id="updateQuestionsListDiv">
            <table class="table">
                <thead>
                    <tr>
                        <th>Номер</th>
                        <th>Тип</th>
                        <th>Стоимость</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        Model.Sort((emp1, emp2) => emp1.Number.CompareTo(emp2.Number));
                        @foreach (var question in Model)
                        {
                            <tr>
                                <td>@Html.ActionLink(@question.Number.ToString(), "EditQuestion", "Course", new { questionId = question.Id})</td>
                                <td>@question.Type</td>
                                <td>@question.Cost</td>
                                <td>
                                    <form asp-action="DeleteQuestion" method="post">
                                        <input type="hidden" id="questionId" name="questionId" value="@question.Id"><br>
                                    <input type="submit" value="X" />
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <form asp-action="AddQuestion" method="post"
          data-ajax="true"
          data-ajax-method="post"
          data-ajax-loading="#loading"
          data-ajax-mode="replace"
          data-ajax-update="#results">

        <button type="submit" class="btn btn-primary" id="btnContactUs">Добавить вопрос</button>
        <span id="loading" style="display:none;"> <i class="fas fa-spinner fa-spin"></i></span>
    </form>
</div>
