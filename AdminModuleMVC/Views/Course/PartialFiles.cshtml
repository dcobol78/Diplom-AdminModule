@model List<CourseFile>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var file in Model)
            {
                <tr>
                    <td>@file.Name</td>
                    <td>@file.Description</td>
                    <td>
                        <form asp-action="DeleteFile" method="post">
                            <input type="hidden" id="fileId" name="fileId" value="@file.Id"><br>
                            <input type="submit" value="X" />
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

