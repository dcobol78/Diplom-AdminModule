@model Question


<div id="answersContainer">
    <div class="form-block">
        @for (int i = 0; i < Model.Answers.Count; i++)
        {
            @Html.HiddenFor(m => m.Answers[i])
            <div class="answerItem">

                <label asp-for="@Model.Answers[i].Content">Вариант ответа</label>
                @Html.EditorFor(m => m.Answers[i].Content)

                <label asp-for="@Model.Answers[i].IsCorrect">Верен ли ответ</label>
                @Html.CheckBoxFor(m => m.Answers[i].IsCorrect)

                <input type="submit" name="DeleteAnswer" id="DeleteAnswer" value="@Model.Answers[i].Id" />

                @Html.HiddenFor(m => m.Answers[i].Id)
                @Html.HiddenFor(m => m.Answers[i].Number)
                @Html.HiddenFor(m => m.Answers[i].Content)
                @Html.HiddenFor(m => m.Answers[i].IsCorrect)
            </div>
        }
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-ajax-unobtrusive@3.2.6/dist/jquery.unobtrusive-ajax.min.js"></script>
}