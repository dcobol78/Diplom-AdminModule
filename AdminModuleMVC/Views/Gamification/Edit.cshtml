@model AchivementViewModel

@{
    ViewData["Title"] = "Edit Achievement";
}

<h2>Edit Achievement</h2>

<h4>Achievement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="CourseId" value=@Model.CourseId />
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpThreshold" class="control-label"></label>
                <input asp-for="ExpThreshold" class="form-control" />
                <span asp-validation-for="ExpThreshold" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input type="file" asp-for="Image" class="form-control" />
                @if (Model.ExistingImageUrl != null)
                {
                    <img src="@Model.ExistingImageUrl" alt="Achievement Image" style="max-height: 200px;" />
                }
            </div>
            <div class="form-group">
                <label asp-for="RewardName" class="control-label"></label>
                <input asp-for="RewardName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="RewardDescription" class="control-label"></label>
                <textarea asp-for="RewardDescription" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="RewardType" class="control-label"></label>
                <input asp-for="RewardType" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" asp-route-id=@Model.CourseId class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>