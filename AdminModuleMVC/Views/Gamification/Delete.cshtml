@model Achivement

@{
    ViewData["Title"] = "Delete Achievement";
}

<h2>Delete Achievement</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Achievement</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            ExpThreshold
        </dt>
        <dd class="col-sm-10">
            @Model.ExpThreshold
        </dd>
        <dt class="col-sm-2">
            Course
        </dt>
        <dd class="col-sm-10">
            @Model.Course.Name
        </dd>
        <dt class="col-sm-2">
            Reward
        </dt>
        <dd class="col-sm-10">
            @Model.Reward?.Name
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id=@Model.CourseId class="btn btn-secondary">Back to List</a>
    </form>
</div>