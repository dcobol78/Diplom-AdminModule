@model Student

@{
    ViewData["Title"] = "Student Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YourApplicationName</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h1 class="mt-5">@Model.Name's Details</h1>

        <div class="card mt-3">
            <div class="card-body">
                <h5 class="card-title">Personal Information</h5>
                <p class="card-text"><strong>ID:</strong> @Model.Id</p>
                <p class="card-text"><strong>Name:</strong> @Model.Name</p>
                <p class="card-text"><strong>Email:</strong> @Model.Email</p>
                <p class="card-text"><strong>Title:</strong> @Model.Title</p>
                <p class="card-text"><strong>User ID:</strong> @Model.UserId</p>
            </div>
        </div>

        <h2 class="mt-5">Courses</h2>
        @if (Model.Courses != null && Model.Courses.Any())
        {
            <div class="table-responsive mt-3">
                <table class="table table-bordered table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Course ID</th>
                            <th scope="col">Course Name</th>
                            <th scope="col">Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model.Courses)
                        {
                            <tr>
                                <td>@course.Id</td>
                                <td>@course.Name</td>
                                <td>@course.Description</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p>No courses found for this student.</p>
        }

        <h2 class="mt-5">Homework Grades</h2>
        @if (Model.HomeworkGrades != null && Model.HomeworkGrades.Any())
        {
            <div class="table-responsive mt-3">
                <table class="table table-bordered table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Homework Name</th>
                            <th scope="col">Grade</th>
                            <th scope="col">Max Grade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var homeworkGrade in Model.HomeworkGrades)
                        {
                            <tr>
                                <td>@homeworkGrade.Homework.Name</td>
                                <td>@homeworkGrade.Grade</td>
                                <td>@homeworkGrade.MaxGrade</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p>No homework grades found for this student.</p>
        }

        <h2 class="mt-5">Test Grades</h2>
        @if (Model.TestGrades != null && Model.TestGrades.Any())
        {
            <div class="table-responsive mt-3">
                <table class="table table-bordered table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Test Name</th>
                            <th scope="col">Grade</th>
                            <th scope="col">Max Grade</th>
                            <th scope="col">Session</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var testGrade in Model.TestGrades)
                        {
                            <tr>
                                <td>@testGrade.Test.Name</td>
                                <td>@testGrade.Grade</td>
                                <td>@testGrade.MaxGrade</td>
                                <td><a href="@Url.Action("TestSession", "Course", new { sessionId = testGrade.TestSession.Id })">View Session</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p>No test grades found for this student.</p>
        }

        <a href="@Url.Action("Index", "Students")" class="btn btn-primary mt-3">Back to List</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>